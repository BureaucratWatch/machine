<OGRVRTDataSource>
    <OGRVRTLayer name="lake-man-jp">
        <SrcDataSource>lake-man-jp.csv</SrcDataSource>
        <GeometryType>wkbPoint</GeometryType>
        <LayerSRS>WGS84</LayerSRS>
        
        <!--
        This will not work due to Japanese Shift JIS encoding
        of lake-man-jp.csv; GDAL says "All CSV files are treated
        as UTF-8 encoded." (http://www.gdal.org/drv_csv.html)
        -->
        <GeometryField encoding="PointFromColumns" x="経度" y="緯度"/>
    </OGRVRTLayer>
</OGRVRTDataSource>
